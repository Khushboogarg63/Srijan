<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:scrollbars="vertical"
    tools:context="org.srijaniitism.srijan.Fragments.HomeFragment">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="top"
            android:src="@drawable/blacklogo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fb"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginRight="50dp"
                android:src="@drawable/fbicon" />

            <ImageView
                android:id="@+id/insta"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:src="@drawable/ic_instagram_sketched" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="vertical">

            <com.sanojpunchihewa.glowbutton.GlowButton
                android:id="@+id/day1"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:alpha="0.4"
                android:padding="5dp"
                android:text="Day 1"
                android:textColor="#000000"
                android:textSize="50sp"
                android:fontFamily="sans-serif-condensed-light"
                app:buttonColor="#F3CCAD"
                app:cornerRadius="60dp"
                app:glowColor="#9866E9"
                app:pressedGlowSize="20dp"
                app:unpressedGlowSize="15dp" />

            <com.sanojpunchihewa.glowbutton.GlowButton
                android:id="@+id/day2"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:alpha="0.4"
                android:padding="5dp"
                android:text="DAY 2"
                android:textColor="#000000"
                android:textSize="50sp"
                app:buttonColor="#F3CCAD"
                android:fontFamily="sans-serif-condensed-light"
                app:cornerRadius="60dp"
                app:glowColor="#9866E9"
                app:pressedGlowSize="20dp"
                app:unpressedGlowSize="15dp" />

            <com.sanojpunchihewa.glowbutton.GlowButton
                android:id="@+id/day3"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:alpha="0.4"
                android:padding="5dp"
                android:text="DAY 3"
                android:textColor="#000000"
                android:textSize="50sp"
                app:buttonColor="#F3CCAD"
                app:cornerRadius="60dp"
                app:glowColor="#9866E9"
                app:pressedGlowSize="20dp"
                android:fontFamily="sans-serif-condensed-light"
                app:unpressedGlowSize="15dp" />

            <com.sanojpunchihewa.glowbutton.GlowButton
                android:id="@+id/informals"
                android:layout_width="250dp"
                android:layout_height="90dp"
                android:alpha="0.4"
                android:padding="5dp"
                android:text="Informals"
                android:textColor="#000000"
                android:textSize="30sp"
                app:buttonColor="#F3CCAD"
                app:cornerRadius="60dp"
                app:glowColor="#9866E9"
                android:fontFamily="sans-serif-condensed-light"
                app:pressedGlowSize="20dp"
                app:unpressedGlowSize="15dp" />

        </LinearLayout>


    </LinearLayout>